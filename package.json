{
  "name": "factory-utility-react",
  "version": "1.0.0",
  "description": "Factory Utility Management System - React/Node.js Migration",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently --names \"SERVER,CLIENT\" --prefix-colors \"blue,green\" \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "setup": "npm install && cd client && npm install && cd .. && (cp env.example .env 2>/dev/null || echo 'Creating .env file...' && cat > .env << 'EOF'\nPORT=5000\nNODE_ENV=development\nDB_SERVER=20.198.94.108\nDB_PORT=49172\nDB_NAME=FactoryUtility\nDB_USER=wtsqluser\nDB_PASSWORD=Password@1\nJWT_SECRET=factory-utility-secret-key-change-in-production\nSESSION_SECRET=factory-utility-session-secret-change-in-production\nCLIENT_URL=http://localhost:3000\nEOF\n)",
    "db:setup": "node database/setup.js",
    "db:setup:local": "node database/setup-local.js",
    "db:create": "echo 'Use database/create_database.sql or run: node database/setup.js'",
    "db:start": "cd database && docker-compose up -d",
    "db:start:postgres": "cd database && /opt/homebrew/bin/docker-compose -f docker-compose-postgres.yml up -d",
    "db:stop": "cd database && docker-compose down",
    "db:stop:postgres": "cd database && /opt/homebrew/bin/docker-compose -f docker-compose-postgres.yml down",
    "db:logs": "cd database && docker logs factory-utility-db -f",
    "db:logs:postgres": "cd database && docker logs factory-utility-postgres -f",
    "db:setup:postgres": "node database/setup-postgres.js",
    "db:setup-full": "./setup-local-db.sh",
    "colima:setup": "./database/colima-setup.sh",
    "colima:start": "colima start --runtime docker",
    "colima:stop": "colima stop",
    "colima:status": "colima status",
    "clean": "node -e \"require('child_process').execSync('lsof -ti:5000,3000 | xargs kill -9 2>/dev/null || true', {stdio: 'inherit'})\""
  },
  "keywords": [
    "factory",
    "utility",
    "management"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "jsonwebtoken": "^9.0.2",
    "mssql": "^10.0.1",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  }
}
